Проанализировать запросы, которые выполнялись на занятии, определить возможные корректировки и/или улучшения (JOIN пока не применять).

SELECT
  gender,
  IF(gender = 1, 'Мужской', 'Женский')
FROM profiles;

/*IF можно заменить на CASE */
SELECT gender, CASE 
            WHEN gender='m' THEN 'Мужской' 
            WHEN gender='f' THEN 'Женский'
        END
FROM vk.profiles;
_______________________

SELECT
  *
FROM vk.media
WHERE
  users_id IN (SELECT to_users_id FROM vk.friend_request WHERE `status` = 1 AND from_users_id = 7) OR
  users_id IN (SELECT from_users_id FROM vk.friend_request WHERE `status` = 1 AND to_users_id = 7);
  
  /* можно заменить на: */

SELECT
  *
FROM vk.media
WHERE
  users_id IN (SELECT to_users_id FROM vk.friend_request WHERE `status` = 1 AND from_users_id = 7)
UNION
SELECT
  *
FROM vk.media
WHERE
  users_id IN (SELECT from_users_id FROM vk.friend_request WHERE `status` = 1 AND to_users_id = 7);
  
